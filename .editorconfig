; http://editorconfig.org
root = true

[*]
indent_style = space
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
indent_size = 2

[*.{json,yml,yaml,html,hbs,css,scss,sass}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_size = 2
